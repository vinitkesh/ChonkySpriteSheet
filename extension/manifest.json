{
  "manifest_version": 3,
  "name": "Dashboard Pet",
  "version": "1.0",
  "description": "Keep a pet on your dashboard!",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "pet.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}